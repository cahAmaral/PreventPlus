@page "{id:int}"
@model PreventPlus.Pages.LocaisSeguros.DeleteModel
@{
    ViewData["Title"] = "Excluir Local Seguro";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir este local seguro?</h3>

<div>
    <h4>Local Seguro</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.LocalSeguro.NomeLocal</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.LocalSeguro.EnderecoLocal</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.LocalSeguro.TipoLocal</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="LocalSeguro.IdLocal" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>