@page
@model PreventPlus.Pages.LocalSeguro.CreateModel
@{
    ViewData["Title"] = "Cadastrar Local Seguro";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="LocalSeguro.NomeLocal" class="form-label"></label>
        <input asp-for="LocalSeguro.NomeLocal" class="form-control" />
        <span asp-validation-for="LocalSeguro.NomeLocal" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LocalSeguro.EnderecoLocal" class="form-label"></label>
        <input asp-for="LocalSeguro.EnderecoLocal" class="form-control" />
        <span asp-validation-for="LocalSeguro.EnderecoLocal" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LocalSeguro.TipoLocal" class="form-label"></label>
        <input asp-for="LocalSeguro.TipoLocal" class="form-control" />
        <span asp-validation-for="LocalSeguro.TipoLocal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}