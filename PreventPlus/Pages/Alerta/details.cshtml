@page
@model PreventPlus.Pages.Alertas.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Alerta";
}

<h2>Detalhes do Alerta</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mensagem</dt>
        <dd class="col-sm-10">@Model.Alerta.IdAlerta</dd>

        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Alerta.DataCriacao.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Região</dt>
        <dd class="col-sm-10">@Model.Alerta.?.NomeRegiao</dd>
    </dl>
</div>

<p>
    <a asp-page="Edit" asp-route-id="@Model.Alerta.IdAlerta" class="btn btn-warning">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
</p>