@page
@model PreventPlus.Pages.Alertas.DeleteModel
@{
    ViewData["Title"] = "Excluir Alerta";
}

<h2>Excluir Alerta</h2>

<h4>Tem certeza que deseja excluir este alerta?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mensagem</dt>
        <dd class="col-sm-10">@Model.Alerta.IdAlerta</dd>

        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Alerta.DataCriacao.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Região</dt>
        <dd class="col-sm-10">@Model.Alerta.?.NomeRegiao</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Alerta.IdAlerta" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>