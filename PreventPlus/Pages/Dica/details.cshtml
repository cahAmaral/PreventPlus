@page
@model PreventPlus.Pages.Dicas.DetailsModel
@{
    ViewData["Title"] = "Detalhes da Dica";
}

<h2>Detalhes da Dica</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Dica.TituloDica</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Dica.TipoDica</dd>

        <dt class="col-sm-2">Tipo de Desastre</dt>
        <dd class="col-sm-10">@Model.Dica.TipoDesastre?.IdDesastre</dd>
    </dl>
</div>

<p>
    <a asp-page="Edit" asp-route-id="@Model.Dica.IdDica" class="btn btn-warning">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
</p>