@page
@model PreventPlus.Pages.HistoricosRisco.DeleteModel
@{
    ViewData["Title"] = "Excluir Histórico de Risco";
}

<h2>Tem certeza que deseja excluir?</h2>

<div>
    <h4>Histórico de Risco</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Chuva</dt>
        <dd class="col-sm-10">@Model.HistoricoRisco.HistChuva</dd>

        <dt class="col-sm-2">Umidade</dt>
        <dd class="col-sm-10">@Model.HistoricoRisco.HistUmidade</dd>

        <dt class="col-sm-2">Temperatura</dt>
        <dd class="col-sm-10">@Model.HistoricoRisco.HistTemp</dd>

        <dt class="col-sm-2">Alerta</dt>
        <dd class="col-sm-10">@Model.HistoricoRisco.HistAlerta</dd>

        <dt class="col-sm-2">Impacto</dt>
        <dd class="col-sm-10">@Model.HistoricoRisco.HistImpacto</dd>

        <dt class="col-sm-2">Região</dt>
        <dd class="col-sm-10">@Model.HistoricoRisco.IdRegiao</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Excluir</button> |
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>