@page
@model PreventPlus.Pages.Kits.IndexModel
@{
    ViewData["Title"] = "Lista de Kits";
}

<h2>Lista de Kits</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Cadastrar Novo Kit</a>
</p>

@if (Model.Kits != null && Model.Kits.Count > 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var kit in Model.Kits)
        {
            <tr>
                <td>@kit.IdKit</td>
                <td>@kit.IdKit</td>
                <td>@kit.ItemKit</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@kit.IdKit" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="Details" asp-route-id="@kit.IdKit" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-page="Delete" asp-route-id="@kit.IdKit" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Nenhum kit cadastrado.</p>
}