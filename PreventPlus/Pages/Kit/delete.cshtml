@page "{id:int}"
@model PreventPlus.Pages.Kits.DeleteModel
@{
    ViewData["Title"] = "Excluir Kit";
}

<h2>Excluir Kit</h2>

<h3>Você tem certeza que deseja excluir este kit?</h3>
<div>
    <h4>Kit</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.Kit.IdKit</dd>

        <dt class="col-sm-2">Descrição:</dt>
        <dd class="col-sm-10">@Model.Kit.ItemKit</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Kit.IdKit" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>