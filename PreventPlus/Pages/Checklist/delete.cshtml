@page
@model PreventPlus.Pages.Checklists.DeleteModel
@{
    ViewData["Title"] = "Excluir Checklist";
}

<h2>Excluir Checklist</h2>

<h4>Tem certeza que deseja excluir este checklist?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Checklist.TituloChecklist</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Checklist.DescricaoChecklist</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Checklist.IdChecklist" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>