@page "{id:int}"
@model PreventPlus.Pages.Usuarios.DeleteModel
@{
    ViewData["Title"] = "Excluir Usuário";
}

<h2>Excluir Usuário</h2>

<h3>Tem certeza que deseja excluir este usuário?</h3>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Usuario.IdUsuario</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Usuario.NomeUsuario</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Usuario.EmailUsuario</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Usuario.IdUsuario" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>