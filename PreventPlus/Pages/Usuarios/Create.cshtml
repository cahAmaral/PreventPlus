@page
@model PreventPlus.Pages.Usuarios.CreateModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<h2>Cadastrar Usuário</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Usuario.NomeUsuario"></label>
        <input asp-for="Usuario.NomeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Usuario.EmailUsuario"></label>
        <input asp-for="Usuario.EmailUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Usuario.SenhaUsuario"></label>
        <input asp-for="Usuario.SenhaUsuario" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Usuario.TipoUsuario"></label>
        <input asp-for="Usuario.TipoUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Usuario.UsuarioCriado"></label>
        <input asp-for="Usuario.UsuarioCriado" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Usuario.IdRegiao"></label>
        <input asp-for="Usuario.IdRegiao" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Salvar</button>
</form>