@page "{id:int}"
@model PreventPlus.Pages.LocalFavorito.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Local Favorito";
}

<h2>Detalhes do Local Favorito</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.LocalFavorito.IdFav</dd>

        <dt class="col-sm-2">ID do Usuário</dt>
        <dd class="col-sm-10">@Model.LocalFavorito.IdUsuario</dd>

        <dt class="col-sm-2">ID do Local</dt>
        <dd class="col-sm-10">@Model.LocalFavorito.IdLocal</dd>
    </dl>
</div>

<p>
    <a asp-page="Edit" asp-route-id="@Model.LocalFavorito.IdFav" class="btn btn-warning">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
</p>